<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updatesItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shadowupdate" >

    <TextView
        android:id="@+id/update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/title_update"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:paddingRight="10dp"
        android:text="34min"
         android:textStyle="bold"
        android:textColor="#ffffff" 
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <ImageView
        android:id="@+id/imgattention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/title_update"
        android:padding="0dp"
        android:scaleType="fitStart"
        android:src="@drawable/megaphone" />

    <TextView
        android:id="@+id/title_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/update_time"
        android:layout_toRightOf="@+id/imgattention"
        android:padding="3dp"
        android:text="Subject"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <ward.landa.expandableTextView
        android:id="@+id/contentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      
        android:layout_alignParentRight="true"
        android:layout_below="@+id/title_update"
        android:layout_toRightOf="@+id/imgattention"
        android:paddingLeft="3dp"
           android:ellipsize="end"
        android:maxLines="2"
        android:text="news news news!!"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#ffffff"
        android:textStyle="bold" />

</RelativeLayout>